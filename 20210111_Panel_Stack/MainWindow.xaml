<Window x:Class="_20210111_Panel_Stack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20210111_Panel_Stack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button>Button1</Button>
        <Button>Button1</Button>
        <Button>Button1</Button>
        <Button>Button1</Button>
        <StackPanel MinHeight="100" Orientation="Horizontal">
            <Button VerticalAlignment="Bottom">Button1</Button>
            <!--默认是Stretch-->
            <Button VerticalAlignment="Stretch">Button1</Button>
            <Button VerticalAlignment="Top">Button1</Button>
            <Button VerticalAlignment="Center">Button1</Button>
        </StackPanel>
    </StackPanel>
</Window>
